{
    "extends": "@tsconfig/next/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/hooks/*": ["src/hooks/*"],
            "@/loaders/*": ["src/loaders/*"],
            "@/pages/*": ["src/pages/*"],
            "@/services/*": ["src/services/*"],
            "@/styles/*": ["src/styles/*"],
            "@/types/*": ["src/types/*"],
            "@/utils/*": ["src/utils/*"],
            "@/data/*": ["data/*"],
            "@/constants": ["src/constants"],
            "@/testutils": ["src/__tests__/utils"]
        }
    },
    "include": ["src/**/*", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "public", "cypress"]
}
