{
    "extends": "@tsconfig/next/tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": true,
        "useUnknownInCatchVariables": true,
        "baseUrl": ".",
        "paths": {
            "@/client/*": ["src/client/*"],
            "@/server/*": ["src/server/*"],
            "@/shared/*": ["src/shared/*"],
            "@/pages/*": ["src/pages/*"],
            "@/types/*": ["src/types/*"],
            "@/data/*": ["data/*"],
            "@/test/*": ["src/__tests__/*"]
        }
    },
    "include": ["next-env.d.ts", ".next/types/**/*.ts", "src/**/*"],
    "exclude": ["node_modules", "public", "cypress"]
}
