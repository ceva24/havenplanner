{
    "extends": "@tsconfig/next/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/components/*": ["./src/components/*"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/pages/*": ["./src/pages/*"],
            "@/api/*": ["./src/pages/api/*"],
            "@/services/*": ["./src/services/*"],
            "@/styles/*": ["./src/styles/*"],
            "@/types/*": ["./src/types/*"],
            "@/utils/*": ["./src/utils/*"],
            "@/data/*": ["./data/*"]
        }
    },
    "include": ["src/**/*", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "public", "cypress"]
}
